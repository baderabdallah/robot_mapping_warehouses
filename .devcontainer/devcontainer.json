{
  "name": "ROS 2 Humble Workspace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/WareHouseRobotMapping",
  "remoteUser": "root",
  "containerEnv": {
    "ROS_DISTRO": "humble",
    "RMW_IMPLEMENTATION": "rmw_fastrtps_cpp",
    "DEBIAN_FRONTEND": "noninteractive",
    // Pass host DISPLAY into the container when available (Linux hosts)
    "DISPLAY": "${localEnv:DISPLAY}"
  },
  // Mount the X11 Unix socket so GUI apps (e.g., matplotlib) can display on Linux hosts
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-vscode.cpptools",
        "twxs.cmake",
        "ms-python.python"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "set -e; rosdep update; if [ -d src ]; then rosdep install -y --from-paths src --ignore-src -r; colcon build; fi"
}
